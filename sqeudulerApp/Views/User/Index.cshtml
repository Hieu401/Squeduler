@model sqeudulerApp.Models.User

@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale-1.0">
    <link rel="stylesheet" a href="~/css/bootstrap.css" />
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/jquery.js"></script>
    <title>Home | Login</title>
    <style>
        .form {
            padding: 25px;
        }

        .top-row {
            background-color: #e6e6e6;
            padding: 10px;
        }

        .loginForm {
            padding: 5%;
        }

        .logo {
            height: 100%;
            width: 150px;
            background-color: grey;
            color: white;
            border: 1px solid grey;
            border-radius: 3px;
        }

        .header {
            padding-top: 5%;
        }

        .btnGroup {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row top-row border rounded">
            <div class="col-2 text-center top-logo">
                <h3 class="logo">Squeduler</h3>
            </div>
            <div class="col-10 text-right">
                <button type="button" class="btn btn-outline-secondary">Login</button>
                <button type="button" class="btn btn-light">Sign up</button>

            </div>
        </div>
        <div class="row header">
            <div class="col text-center">
                <h3>Squeduler</h3>
                <br />
                <h4>The tool for shift scheduling</h4>
            </div>
        </div>
        <div class="row justify-content-center form">
            <div class="col-6">
                <form asp-action="Login" asp-controller="UserController" class="border rounded loginForm">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <br />
                        <label asp-for="Email" class="control-label">Email:</label>
                        <input asp-for="Email" class="form-control" type="email" id="email" placeholder="Enter email"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Password:</label>
                        <input asp-for="Password" class="form-control" type="password" id="password" placeholder="Enter password"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!----- will implement later
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="rememberPassword">
        <label class="form-check-label" for="rememberPassword">Remember me</label>
    </div>
    --->

                    <br />
                    <div class="btnGroup">
                        <button type="submit" class="btn btn-outline-secondary btn-lg" asp-action="Login" asp-controller="User">Login</button>
                        <button type="submit" class="btn btn-light btn-lg" asp-action="Create" asp-controller="User">Sign up</button>
                    </div>

                </form>
            </div>
        </div>
        <div class="row footer">
            <div class="col text-center">
                <a href="@Url.Action("ForgotPassword")">Forgot password?</a>
            </div>
        </div>
    </div>
</body>
</html>