@model sqeudulerApp.Models.User
@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale-1.0">
    <link rel="stylesheet" a href="~/css/bootstrap.css" />
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/jquery.js"></script>
    <title>Squeduler | Register</title>
    <style>
        .form {
            padding: 25px;
        }

        .top-row {
            background-color: #e6e6e6;
            padding: 10px;
        }

        .loginForm {
            padding: 5%;
        }

        .logo {
            height: 100%;
            width: 150px;
            background-color: grey;
            color: white;
            border: 1px solid grey;
            border-radius: 3px;
        }

        .header {
            padding-top: 5%;
        }

        .btnGroup {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row top-row border rounded">
            <div class="col-2 text-center top-logo">
                <h3 class="logo">Squeduler</h3>
            </div>
            <div class="col-10 text-right">
                <form asp-action="Login" asp-controller="UserController">
                    <button type="submit" class="btn btn-outline-secondary btn-lg" asp-action="Login" asp-controller="User">Login</button>
                    <button type="submit" class="btn btn-light" asp-action="Create" asp-controller="User">Sign up</button>
                </form>
            </div>
        </div>
        <div class="row header">
            <div class="col text-center">
                <h3>Register</h3>
                <br />
                <h4>Create an account</h4>
            </div>
        </div>
        <div class="row justify-content-center form">
            <div class="col-6 rounded border">
                <div class="row">
                    <div class="col-8 offset-2">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <br />
                                <label asp-for="Email" class="control-label">Email:</label>
                                <input asp-for="Email" class="form-control" type="email" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label">Password:</label>
                                <input asp-for="Password" class="form-control" type="password" minlength=8 required />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FirstName" class="control-label">First name:</label>
                                <input asp-for="FirstName" class="form-control" required />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="LastName" class="control-label">Last name:</label>
                                <input asp-for="LastName" class="form-control" required />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PhoneNr" class="control-label">Phone number:</label>
                                <input asp-for="PhoneNr" class="form-control" type="tel" placeholder="0612345678" />
                                <span asp-validation-for="PhoneNr" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Role" class="control-label">User type:</label>
                                <input asp-for="Role" class="form-control" value="user" readonly />
                                <span asp-validation-for="Role" class="text-danger"></span>
                            </div>
                            <div class="form-group align-middle">
                                <br />
                                <button type="submit" class="btn btn-outline-secondary align-middle">Register</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row footer">
            <div class="col text-center">
                <!--<a href="">Return to Login page</a> -->
            </div>
        </div>
    </div>
</body>
</html>